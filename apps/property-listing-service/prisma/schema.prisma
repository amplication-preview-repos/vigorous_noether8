datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Property {
  baths        Decimal?
  bedrooms     Int?
  beds         Int?
  createdAt    DateTime @default(now())
  guestLimit   Int?
  id           String   @id @default(cuid())
  location     String?
  name         String
  nightlyPrice Float?
  rentPrice    Float?
  sellPrice    Float?
  updatedAt    DateTime @updatedAt
}
